{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">

        <h1 class="mt-4 mb-3">
            {{ city }}
        </h1>

        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">Home</a>
            </li>
            <li class="breadcrumb-item active">{{ city }}</li>
        </ol>

{% for hotel in hotels %}
        <div class="row" style="padding-bottom: 10px; border-radius: 15px; border-style: groove; padding-top: 10px; margin-bottom: 10px">
            <div class="col-md-7">
                <a href="#">
                    <img class="img-fluid rounded mb-3 mb-md-0" src="{{ hotel.image }}" alt="">
                </a>
            </div>
            <div class="col-md-5">
                <h3>{{ hotel.name }}</h3>
                <p>{{ hotel.price }} $/night</p>
                <p>{{ hotel.address}}</p>
                <p>{{ hotel.description | slice(1,500) }}</p>
                <a class="btn btn-primary" href="{{ path('hotel',{'id': hotel.id }) }}">View Hotel
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        </div>
{% endfor %}



    </div>

{% endblock %}