{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container" style="padding-top: 50px; padding-bottom: 430px">
        <h1>Register</h1>

            <div class="col-6">
                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.username,
                        {'attr': {'class': 'form-control', 'placeholder' : 'Zhecond'}}) }}
                    {{ form_row(registrationForm.firstName,
                        {'attr': {'class': 'form-control', 'placeholder' : 'Eugene'}}) }}
                    {{ form_row(registrationForm.surname,
                        {'attr': {'class': 'form-control', 'placeholder' : 'Popov'}}) }}
                    {{ form_row(registrationForm.email,
                        {'attr': {'class': 'form-control', 'placeholder' : 'zhecond@vafel.com'}}) }}
                    {{ form_row(registrationForm.plainPassword.first,
                        {'attr': {'class': 'form-control', 'placeholder' : 'Minimum 6 characters'}}) }}
                    {{ form_row(registrationForm.plainPassword.second,
                        {'attr': {'class': 'form-control', 'placeholder' : 'Confirm your password'}}) }}
                        <button type="submit" class="btn btn-primary" formnovalidate>Register</button>
                    {{ form_end(registrationForm) }}
            </div>
    </div>
{% endblock %}
